{
  "compilerOptions": {
    "baseUrl": "./",
    "allowSyntheticDefaultImports": false,
    "paths": {
      "@foundation/*": ["src/foundation/*"],
      "@elements/*": ["src/elements/*"],
      "@modules/*": ["src/modules/*"],
      "@organisms/*": ["src/organisms/*"],
      "@sections/*": ["src/sections/*"],
      "@stores/*": ["src/stores/*"],
      "@templates/*": ["src/templates/*"],
      "@svg/*": ["src/assets/svg/*"],
      "@utils/*": ["src/utils/*"],
    }
  },
  "include": ["src/**/*"]
}